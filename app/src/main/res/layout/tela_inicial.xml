<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_menu_lateral"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaInicialActivity">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <include layout="@layout/toolbar"/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="273dp"
                            >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|bottom"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/mensagem_boas_vindas"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/logo"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="90dp"/>

                        </FrameLayout>

                        <Button
                            android:id="@+id/button_profile"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="62dp"
                            android:layout_marginTop="18.7dp"
                            android:layout_marginRight="62dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:text="Perfil" />

                        <Button
                            android:id="@+id/button_projects"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="62dp"
                            android:layout_marginTop="18.7dp"
                            android:layout_marginRight="62dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:text="Lista de Projetos" />

                        <Button
                            android:id="@+id/button_crew"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="62dp"
                            android:layout_marginTop="18.7dp"
                            android:layout_marginRight="62dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:text="Equipe" />

                </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_menu_lateral"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/menu_lateral_cabecalho"
            app:menu="@menu/menu_lateral">

        </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
